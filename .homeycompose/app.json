{
  "id": "com.robinwidhede.ewelink",
  "version": "1.0.0",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "platforms": [
    "local"
  ],
  "name": {
    "en": "eWeLink"
  },
  "description": {
    "en": "Adds support for eWeLink (Sonoff) devices on Homey Pro (Early 2023)."
  },
  "category": [
    "lights"
  ],
  "permissions": [],
  "images": {
    "small": "/assets/images/small.jpg",
    "large": "/assets/images/large.jpg"
  },
  "brandColor": "#007EC8",
  "author": {
    "name": "Robin Widhede",
    "email": "robinwidhede@icloud.com"
  },
  "drivers": [
    {
	  "id": "abc-2.0-led",
	  "name": {
