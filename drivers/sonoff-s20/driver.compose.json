        {
          "id": "networkLed",
          "type": "dropdown",
          "value": "on",
          "label": {
            "en": "Network indicator"
          },
          "values": [
            {
              "id": "on",
              "label": {
                "en": "On"
              }
            },
            {
              "id": "off",
              "label": {
                "en": "Off"
              }
            }
          ]
        },
        {
          "id": "duration",
          "type": "dropdown",
          "value": "off",
          "label": {
            "en": "Duration"
          },
          "values": [
            {
              "id": "on",
              "label": {
                "en": "On"
              }
            },
            {
              "id": "off",
              "label": {
                "en": "Off"
              }
            }
          ]
        },
        {
          "id": "durationLimit",
          "type": "number",
          "label": {
            "en": "Duration seconds"
          },
          "value": 0.5,
          "min": 0.5,
          "max": 3600
        }
      ]
    }
  ]
