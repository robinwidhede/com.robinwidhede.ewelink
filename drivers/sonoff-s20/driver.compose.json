  },
  "class": "socket",
  "capabilities": ["onoff"],
  "images": {
    "large": "/drivers/sonoff-s20/assets/images/large.png",
    "small": "/drivers/sonoff-s20/assets/images/small.png"
  },
  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
