            "en": "Power-on response"
          },
          "values": [
            {
              "id": "on",
              "label": {
                "en": "On"
              }
            },
            {
              "id": "off",
              "label": {
                "en": "Off"
              }
            },
            {
              "id": "stay",
              "label": {
                "en": "Resume the state before power outage"
              }
            }
