          "type": "label",
          "label": {
            "en": "Model"
          },
          "value": "model_name"
        },
        {
          "id": "ip",
          "type": "label",
          "label": {
            "en": "IP"
          },
          "value": "ip_address"
        },
        {
          "id": "fwVersion",
          "type": "label",
          "label": {
            "en": "Firmware version"
          },
          "value": "fw_version"
        }
